  "@context": "http://schema.org",
  "@type": "Organization",
  "url": "https://www.therailsshop.club",
  "contactPoint": [{
    "@type": "ContactPoint",
    "telephone": "+256752969844",
    "contactType": "customer service"
  }]
}
<script type="application/ld+json">
{
  "@context": "http://schema.org",
